<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="jp.tkji.yapcasiaviewer"
    android:versionCode="1"
    android:versionName="1.0" >
    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:name="YapcAsiaViewer"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Sherlock.Light.DarkActionBar" >
        <activity
            android:name=".TalkListActivity"
            android:label="@string/title_talk_list" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TalkDetailActivity"
            android:label="@string/title_talk_detail" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".TalkListActivity" />
        </activity>
    </application>
</manifest>